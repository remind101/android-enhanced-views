<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EnhancedTextView">
        <attr name="consumeLeftDrawableTouch" format="boolean" />
        <attr name="consumeRightDrawableTouch" format="boolean" />

        <attr name="drawableSticky" format="boolean" />

        <attr name="innerShadowColor" format="color" />
        <attr name="innerShadowRadius" format="float" />
        <attr name="innerShadowDx" format="float" />
        <attr name="innerShadowDy" format="float" />

        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowRadius" format="float" />
        <attr name="outerShadowDx" format="float" />
        <attr name="outerShadowDy" format="float" />

        <attr name="typeface" format="string" />

        <attr name="textForeground" format="reference|color" />
        <attr name="textBackground" format="reference|color" />

        <attr name="strokeWidth" format="float" />
        <attr name="strokeMiter" format="float" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EnhancedEditText">
        <attr name="clearable" format="boolean" />
        <attr name="clearDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="EnhancedCheckableButton">
        <attr name="checked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PageIndicatorView">
        <attr name="pageCount" format="integer" />
        <attr name="currentPage" format="integer" />
        <attr name="font" format="string" />
        <attr name="shadowDrawable" format="reference" />
        <attr name="doneDrawable" format="reference" />
        <attr name="activeCircleDrawable" format="reference" />
        <attr name="inActiveCircleDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="circleCount" format="integer" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="activeDrawable" format="reference" />
        <attr name="inActiveDrawable" format="reference" />
        <attr name="radius" format="dimension" />
        <attr name="inactiveColor" format="color" />
        <attr name="activeColor" format="reference" />
        <attr name="gravity" format="enum">
            <enum name="top" value="48" />
            <enum name="center" value="17" />
            <enum name="bottom" value="80" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FastScrollView">
        <attr name="overlayWidth" format="dimension" />
        <attr name="overlayHeight" format="dimension" />
        <attr name="overlayTextSize" format="dimension" />
        <attr name="overlayScrollThumbWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EnhancedTextViewTheme">
        <attr name="EnhancedTextViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="EnhancedCheckableButtonTheme">
        <attr name="EnhancedCheckableButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="EnhancedButtonTheme">
        <attr name="EnhancedButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="EnhancedEditTextTheme">
        <attr name="EnhancedEditTextStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PageIndicatorViewTheme">
        <attr name="PageIndicatorViewStyle" format="reference" />
    </declare-styleable>

</resources>